{
  "compilerOptions": {
    "rootDir": "./src",             // Definir el directorio de origen
    "outDir": "./dist",             // Definir el directorio de salida
    "module": "commonjs",           // Usamos commonjs para la compatibilidad con Node.js
    "target": "ES6",                // Usamos ES6 como objetivo de compilación
    "types": ["node"],              // Incluir los tipos de Node.js
    "sourceMap": true,              // Generar archivos source map
    "declaration": true,            // Generar archivos de declaración (.d.ts)
    "declarationMap": true,         // Generar mapas de declaración
    "strict": true,                 // Activar todas las comprobaciones estrictas
    "noUncheckedIndexedAccess": true, // Activar el chequeo estricto para índices no comprobados
    "exactOptionalPropertyTypes": true, // Exactitud en las propiedades opcionales
    "skipLibCheck": true,           // Ignorar chequeos de las librerías
    "esModuleInterop": true,        // Permitir importaciones de ESModules
    "forceConsistentCasingInFileNames": true, // Forzar consistencia en los nombres de archivos
    "moduleResolution": "node",     // Resolución de módulos al estilo de Node.js
    "resolveJsonModule": true       // Permitir la importación de módulos JSON
  },
  "include": [
    "src/**/*.ts"                   // Incluir todos los archivos TypeScript dentro de src
  ],
  "exclude": [
    "node_modules"                  // Excluir la carpeta node_modules
  ]
}

